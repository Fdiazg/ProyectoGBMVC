@model DisenadorEdicionModel
<h3>Eliminar Diseñador/a</h3>
<hr />
<form method="post" asp-controller="Disenadores" asp-action="Eliminar">
    <h5>Está seguro de eliminar al diseñador/a:</h5>
    <h5>Id: @Model.Id</h5>
    <h5>Nombre: @Model.Nombre</h5>
    <input type="hidden" asp-for="Id" />
    <br />
    <button type="submit" class="btn btn-danger">Sí</button>
    <a asp-controller="Disenadores" asp-action="Index" class="btn btn-secondary">No</a>
</form>