@model DisenadorEdicionModel
<h3>Diseñador</h3>
<hr />
<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body ">
                <div class="form-group">
                    <label asp-for="Nombre"></label>
                    <input asp-for="Nombre" type="text" class="form-control" disabled />
                </div>
                <div class="form-group">
                    <label asp-for="FechaNacimiento">Fecha de nacimiento</label>
                    <input asp-for="FechaNacimiento" type="date" class="form-control" disabled />
                </div>
                <div class="form-group">
                    <label asp-for="Biografia">Biografía</label>
                    <textarea asp-for="Biografia" rows="7" class="form-control" disabled> </textarea>
                </div>
                <div class="form-group">
                    <label asp-for="SitioWeb">Página Web</label>
                    <input asp-for="SitioWeb" type="text" class="form-control" disabled />
                </div>
            </div>
        </div>
        <a asp-controller="JuegosDeMesa" asp-action="Index" class="btn btn-primary mt-3">Volver</a>

    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-body text-center">
                <img src="@Model.ImagenUrl" style="max-width : 100%" />
            </div>
        </div>
    </div>
</div>
