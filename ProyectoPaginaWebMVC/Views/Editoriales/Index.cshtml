@model List<EditorialModel>
<div class="row">
    <div class="col-md-6">
        <h3>Listado de Editoriales</h3>
    </div>
    <div class="col-md-6">
        <a asp-controller="Editoriales" asp-action="NuevaEditorial" class="btn btn-primary float-lg-right"><i class="bi bi-plus-circle"></i> Nuevo</a>
    </div>
</div>
<div>
    <hr />
    <div class="card">
        <div class="card-body">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nombre</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Nombre</td>
                            <td>
                                <a asp-route-id="@item.Id" asp-controller="Editoriales" asp-action="EditarEditorial" class="btn btn-warning" data-toggle="tooltip" data-placement="top" title="Editar"><i class="bi bi-pencil-square"></i></a>
                                <a asp-route-id="@item.Id" asp-controller="Editoriales" asp-action="EliminarEditorial" class="btn btn-danger" data-toggle="tooltip" data-placement="top" title="Eliminar"><i class="bi bi-trash"></i></a>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
