@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> _signInManager

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>JDM En Tu Mesa</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.6.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <div class="div-uno">
            <a class="navbar-brand" href="#">Juegos de Mesa en tú mesa</a>
        </div>
        <div class="div-dos">
            <div class="row ">
                @if (_signInManager.IsSignedIn(User))
                {
                    <div class="mt-2 mr-5">
                        <h5>Hola, @User.Identity.Name</h5>
                    </div>
                }
                else
                {
                    <div class="mt-2 mr-5">
                        <a asp-controller="Usuarios" asp-action="Registro"><i class="bi bi-person-square"></i> Registro</a>
                        <a asp-controller="Usuarios" asp-action="Login"><i class="bi bi-box-arrow-right "></i> Login</a>
                    </div>
                }

                <div class="text-right mt-2 mr-5 float-right">
                    <a href="#"><i class="bi bi-box-arrow-left"></i> Salir</a>
                </div>
            </div>

        </div>
    </header>
    <div class="div-tres">
        <ul class="nav flex-column mt-3">
            <li class="nav-item menu-selecionado">
                <a class="nav-link " asp-controller="Home" asp-action="Index"><i class="lab la-fort-awesome icon"></i> Inicio</a>
            </li>

            <li class="nav-item">
                <a class="nav-link" asp-controller="JuegosDeMesa" asp-action="Index"><i class="las la-dice-d6 icon"></i> Juegos</a>
            </li>
            @if (_signInManager.IsSignedIn(User))
            {
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Categorias" asp-action="Index"><i class="las la-bullseye icon"></i> Categorías</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Mecanicas" asp-action="Index"><i class="las la-dragon icon"></i> Mecánicas</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Editoriales" asp-action="Index"><i class="las la-puzzle-piece icon"></i> Editoriales</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Disenadores" asp-action="Index"><i class="las la-robot icon"></i> Diseñadores</a>
                </li>
            }

        </ul>
    </div>
    <div class="div-cuatro p-4">
        @RenderBody()
    </div>






    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

<script>
    $(function () {
        $('[data-toggle="tooltip"]').tooltip()
    })
</script>
</body>
</html>
